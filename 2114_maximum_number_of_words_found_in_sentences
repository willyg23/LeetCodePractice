        //         if(sentences[i].charAt(j) == ' '){
        //             totalWordsCurrent++;
        //         }
        //     }
        //     totalWordsCurrent++;
        //     if(totalWordsCurrent > totalWordsBest){
        //         totalWordsBest = totalWordsCurrent;
        //     }
        //     totalWordsCurrent = 0;
        // }

        // return totalWordsBest;
    }
}
